@using System.Xml.Linq
@model XElement

@{
    ViewBag.Title = "Uppgift 3 - Beviljade Tider";
}

<h2>Uppgift 3 - Beviljade Tider</h2>

@{
    // Detta är det XElement-objekt som skickats till vyn
    XElement xml = Model;
}


    
        <table class="table-bordered" width="50%">
            <thead>
                <tr>
                    <th>
                        Startdatum
                    </th>
                    <th>
                        Slutdatum
                    </th>
                    <th>
                        Typ
                    </th>
                    <th>
                        Summa
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (XElement k in Model.Elements("Ärende"))
                {

                        foreach (XElement t in k.Elements("BeviljadeTider").Elements("Beviljad"))
                        {
                            <tr>
                                <td>@((string)t.Element("Startdatum"))</td>
                                <td>@((string)t.Element("Slutdatum"))</td>
                                <td>@((string)k.Element("Typ"))</td>
                                <td>@((string)t.Element("Belopp"))</td>
                            </tr>
                        }


                }
                    
            </tbody>
        </table>
   